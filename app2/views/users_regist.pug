extends layout

block content
  h1 ユーザー登録
  div 
    form(method='post' action='/api/regist_user')
      div
        label(for='name') 名前
        input(type='text' name='name')
      div
        label(for='email') メールアドレス
        input(type='text' name='email')
      div
        label(for='password') パスワード
        input(type='password' name='password')
      div
        input(type='submit' value='登録')